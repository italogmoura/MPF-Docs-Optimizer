{
  "manifest_version": 3,
  "name": "MPF Docs Optimizer",
  "version": "1.0.0",
  "description": "Otimiza o espaço de tela do Google Docs integrado ao Sistema Único do MPF",
  "permissions": [
    "storage",
    "activeTab",
    "alarms",
    "notifications",
    "scripting"
  ],
  "host_permissions": [
    "*://*.mpf.mp.br/*",
    "*://docs.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.mpf.mp.br/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.svg",
      "32": "icons/icon32.svg",
      "48": "icons/icon48.svg",
      "128": "icons/icon128.svg"
    }
  },
  "icons": {
    "16": "icons/icon16.svg",
    "32": "icons/icon32.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  }
}